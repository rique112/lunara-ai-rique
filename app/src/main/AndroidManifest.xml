<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp"
tools:context=".MainActivity">

<!-- Chat Output -->
<TextView
    android:id="@+id/chatOutput"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_alignParentTop="true"
    android:background="#111111"
    android:textColor="#FFFFFF"
    android:textSize="16sp"
    android:padding="10dp"
    android:scrollbars="vertical"
    android:text="Lunara is waiting..." />

<!-- Input Field -->
<EditText
    android:id="@+id/inputField"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/chatOutput"
    android:hint="Say something..."
    android:background="#222222"
    android:textColor="#FFFFFF"
    android:textColorHint="#888888"
    android:padding="10dp"
    android:textSize="16sp" />

<!-- Send Button -->
<Button
    android:id="@+id/sendButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/inputField"
    android:layout_alignParentStart="true"
    android:text="Send" />

<!-- Voice Button -->
<Button
    android:id="@+id/voiceButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/inputField"
    android:layout_toEndOf="@id/sendButton"
    android:layout_marginStart="8dp"
    android:text="Voice" />

<!-- Camera Button -->
<Button
    android:id="@+id/camButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/inputField"
    android:layout_toEndOf="@id/voiceButton"
    android:layout_marginStart="8dp"
    android:text="Camera" />

<!-- Learn Button -->
<Button
    android:id="@+id/learnButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/inputField"
    android:layout_toEndOf="@id/camButton"
    android:layout_marginStart="8dp"
    android:text="Learn" />

<!-- Clear Memory Button -->
<Button
    android:id="@+id/clearMemoryBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/inputField"
    android:layout_toEndOf="@id/learnButton"
    android:layout_marginStart="8dp"
    android:text="Clear" />

<!-- Upgrade Button -->
<Button
    android:id="@+id/upgradeButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/sendButton"
    android:layout_alignParentStart="true"
    android:layout_marginTop="8dp"
    android:text="Upgrade" />

<!-- Observe Button -->
<Button
    android:id="@+id/observeButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/sendButton"
    android:layout_toEndOf="@id/upgradeButton"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:text="Observe" />

</RelativeLayout>